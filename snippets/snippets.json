        ],
        "description": "GOML Snippet: Mesh"
    },
    "mesh redcube": {
        "prefix": "mesh-redcube",
        "body": [
            "<mesh color=\"red\" position=\"0,0,0\" geometry=\"cube\"/>$1"
        ],
        "description": "GOML Snippet: Mesh [red cube]"
    },
    "mesh with component": {
        "prefix": "mesh-component",
        "body": [
            "<mesh color=\"$1\" position=\"$2,$3,$4\" geometry=\"$5\"/>",
