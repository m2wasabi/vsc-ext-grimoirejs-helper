{
    "GOML": {
        "prefix": "goml",
        "body": [
            "<goml width=\"fit\" height=\"fit\">",
            "    $1",
            "</goml>"
        ],
        "description": "goml tag"
    },
    "scene": {
        "prefix": "scene",
        "body": [
            "<scene>",
            "    $1",
            "</scene>"
        ],
        "description": "scene tag"
    },
    "camera": {
        "prefix": "camera",
        "body": [
            "<camera>"
        ],
        "description": "GOML Snippet: Camera"
    },
    "camera fixed": {
        "prefix": "camera-fix",
        "body": [
            "<camera>",
            "</camera>"
        ],
        "description": "GOML Snippet: Angle fixed camera"
    },
    "camera mouse control": {
        "prefix": "camera-mouse",
        "body": [
            "<camera>",
            "    <camera.components>",
            "        <MouseCameraControl/>",
            "    </camera.components>",
            "</camera>"
        ],
        "description": "GOML Snippet: Mouse rotatable camera"
    },
    "geometry": {
        "prefix": "geo",
        "body": [
