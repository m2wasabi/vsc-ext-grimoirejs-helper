{
    "name": "grimoire-js-helper",
    "displayName": "Grimoire.js Helper",
    "description": "Grimoire.js Helper extension. Syntax highlight and GOML snnipets.",
    "version": "0.1.2",
    "publisher": "m2wasabi",
    "icon": "images/grimoirejs.png",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "goml",
                "aliases": [
                    "GOML",
                    "goml"
                ],
                "extensions": [
                    ".goml"
                ],
                "firstLine": "(\\<\\goml.*)",
                "configuration": "./language-configuration.json"
            },
            {
                "id": "glsl",
                "extensions": [
                    ".sort"
                ]
            }
        ],
        "grammars": [
            {
                "language": "goml",
                "scopeName": "text.xml.goml",
                "path": "./syntaxes/goml.json"
            }
        ],
        "snippets": [
            {
                "language": "goml",
                "path": "./snippets/snippets.json"
            }
        ]
    }
}